            sl:scale_height="500"
            sl:scale_base_width="1920"
            sl:scale_base_height="500">

            <TextView
                android:id="@+id/tv_level2_q_1th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                sl:scale_width="200"
                sl:scale_height="200"
                sl:scale_top="150"
                sl:scale_left="110"/>

            <TextView
                android:id="@+id/tv_level2_q_2th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                sl:scale_width="200"
                sl:scale_height="200"
                sl:scale_top="150"
                sl:scale_left="410"/>

            <TextView
                android:id="@+id/tv_level2_q_3th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                sl:scale_width="200"
                sl:scale_height="200"
                sl:scale_top="150"
                sl:scale_left="710"/>

            <TextView
                android:id="@+id/tv_level2_q_4th"
