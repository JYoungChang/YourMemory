                sl:scale_left="1010"/>

            <TextView
                android:id="@+id/tv_level2_q_5th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                sl:scale_width="200"
                sl:scale_height="200"
                sl:scale_top="150"
                sl:scale_left="1310"/>

            <TextView
                android:id="@+id/tv_level2_q_6th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                sl:scale_width="200"
                sl:scale_height="200"
                sl:scale_top="150"
                sl:scale_left="1610"/>


        </com.ssomai.android.scalablelayout.ScalableLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sl:scale_width="1920"
            sl:scale_height="500"
            sl:scale_top="500"
            sl:scale_base_width="1920"
            sl:scale_base_height="500">

            <TextView
                android:id="@+id/tv_level2_a_1th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#2B2B2B"
                sl:scale_width="200"
                sl:scale_height="200"
                sl:scale_top="150"
                sl:scale_left="110"/>

            <TextView
                android:id="@+id/tv_level2_a_2th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
